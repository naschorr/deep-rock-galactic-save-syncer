@using GUI.Data

<div class="position-relative">
    <div class="row">
        <div class="col-12 d-flex justify-content-center">
            <h1 class="title-text">DRGSS</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-12 d-flex justify-content-center">
            <h2 class="sub-text">Deep Rock Galactic Save Syncer</h2>
        </div>
    </div>
    <div class="stealth-button refresh-container p-1" title="Refresh the save files" @onclick="@(e => RefreshSaveFiles())">
        <img class="icon-m" src="/images/drg_icons/resupplier_icon.png" />
    </div>
    @if (_RepoUrl != null)
    {
        <div class="stealth-button github-link-container p-1" title="View on GitHub" @onclick="@(e => OpenRepoInBrowser())">
            <img class="icon-m" src="/images/github_logomark.png" />
        </div>
    }
</div>

@code {
    [Inject]
    public ConfigLoaderService ConfigLoader { get; set; } = default!;

    [Parameter]
    public EventCallback onRefresh { get; set; } = default!;

    private string? _RepoUrl;

    protected override void OnInitialized()
    {
        _RepoUrl = ConfigLoader.Config?.repoUrl;
    }

    protected void RefreshSaveFiles()
    {
        /*
         * Really this should just call SyncerManager.Refresh(), but for some reason that doesn't end up propagating
         * the change detection, even when the refreshed files are emitted.
         */
        onRefresh.InvokeAsync();
    }

    protected void OpenRepoInBrowser()
    {
        ElectronNET.API.Electron.Shell.OpenExternalAsync(_RepoUrl);
    }
}
